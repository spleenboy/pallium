{
    "title": "Blog",
    "description": "A sample blog editor",
    "icon": "chat",
    "directory": "content",
    "database": "data/blog.db",
    "contentTypes": [
    {
        "settings": {
            "title": "Example",
            "plural": "Examples",
            "handle": "example",
            "description": "Examples of the different types of fields",
            "icon": "extension"
        },
        "storage": {
          "format": "yaml",
          "extension": "md",
          "contentKey": "md",
          "directory": [
              "example",
              {"type": "substring", "field": "text", "start": 0, "count": 1}
          ],
          "filename": {"type": "reflect", "field": "text"},
          "title": {"type": "reflect", "field": "text"},
          "metadata": {
              "Date": {"type": "moment", "field": "date", "format": "YYYY/MM/DD"},
              "Description": {"type": "reflect", "field": "textarea"}
          }
        },
        "fields": [
        {
            "name": "text",
            "label": "text",
            "defaultValue": "Example Title",
            "hint": "Give this post a good name",
            "attributes": {
                "max": 255,
                "required": true,
                "autofocus": true
            }
        },
        {
            "name": "checkbox",
            "type": "checkbox",
            "label": "checkbox",
            "options": [
                {"label": "Option 1", "value": "Option 1"},
                {"label": "Option 2", "value": "Option 2"},
                {"label": "Option 3", "value": "Option 3"}
            ]
        },
        {
            "name": "color",
            "type": "color",
            "label": "color",
            "attributes": {
            }
        },
        {
            "name": "date",
            "type": "date",
            "label": "date",
            "attributes": {
                "required": true
            }
        },
        {
            "name": "email",
            "type": "email",
            "label": "email",
            "attributes": {
                "placeholder": "example@domain.com"
            }
        },
        {
            "name": "file",
            "type": "file",
            "label": "file"
        },
        {
            "name": "hidden",
            "type": "hidden",
            "label": "hidden",
            "value": "secret"
        },
        {
            "name": "month",
            "type": "month",
            "label": "month"
        },
        {
            "name": "md",
            "type": "md",
            "rows": 20,
            "label": "md"
        },
        {
            "name": "number",
            "type": "number",
            "label": "number"
        },
        {
            "name": "password",
            "type": "password",
            "label": "password"
        },
        {
            "name": "radio",
            "type": "radio",
            "label": "radio",
            "options": [
                {"label": "Option 1", "value": "Value 1"},
                {"label": "Option 2", "value": "Value 2"}
            ]
        },
        {
            "name": "range",
            "type": "range",
            "label": "range",
            "attributes": {
                "min": 1,
                "max": 11,
                "step": 1
            }
        },
        {
            "name": "select",
            "type": "select",
            "label": "select",
            "options": [
                {"label": "Select an Option...", "value": ""},
                {"label": "Option 1", "value": "Value 1"},
                {"label": "Option 2", "value": "Value 2"}
            ]
        },
        {
            "name": "textarea",
            "type": "textarea",
            "label": "textarea",
            "rows": 5
        },
        {
            "name": "time",
            "type": "time",
            "label": "time"
        },
        {
            "name": "url",
            "type": "url",
            "label": "url"
        },
        {
            "name": "week",
            "type": "week",
            "label": "week"
        }
        ]
    },
    {
        "settings": {
            "title": "Post",
            "plural": "Posts",
            "handle": "post",
            "description": "",
            "icon": "archive"
        },
        "storage": {
            "format": "json",
            "extension": "md",
            "contentKey": "body",
            "directory": [
                "post",
            {"type": "moment", "field": "postDate", "format": "YYYY/MM/"}
            ],
                "filename": {"type": "reflect", "field": "title"},
                "title": {"type": "reflect", "field": "title"},
                "metadata": {
                    "Description": {"type": "reflect", "field": "description"}
                }
        },
        "fields": [
        {
            "name": "title",
            "label": "Title",
            "defaultValue": "New Post",
            "hint": "Give this post a good name",
            "attributes": {
                "max": 255,
                "required": true,
                "autofocus": true
            }
        },
        {
            "name": "postDate",
            "type": "date",
            "label": "Date of Post",
            "attributes": {
                "required": true
            }
        },
        {
            "name": "description",
            "type": "textarea",
            "rows": 5,
            "label": "Description"
        },
        {
            "name": "body",
            "type": "md",
            "rows": 20,
            "label": "Content",
            "attributes": {
                "required": true
            }
        }
    ]
    },

    {
        "settings": {
            "title": "Page",
            "plural": "Pages",
            "handle": "page",
            "description": "",
            "icon": "book"
        },
        "storage": {
            "directory": "page",
            "format": "json",
            "extension": "md",
            "contentKey": "body",
            "filename": {"type": "reflect", "field": "title"},
            "title": {"type": "reflect", "field": "title"},
            "metadata": {
                "Description": {"type": "reflect", "field": "description"}
            }
        },
        "fields": [
            {
                "name": "title",
                "label": "Title",
                "defaultValue": "New Page",
                "hint": "Give this page a good name",
                "attributes": {
                    "max": 255,
                    "required": true,
                    "autofocus": true
                }
            },
            {
                "name": "description",
                "type": "textarea",
                "label": "Description"
            },
            {
                "name": "body",
                "type": "md",
                "rows": 20,
                "label": "Content",
                "attributes": {
                    "required": true
                }
            }
        ]
    }
    ]
}
