{
    "title": "Pallium",
    "description": "Documentation for the Pallium application",
    "icon": "code",
    "contentDirectory": "content",
    "assetDirectory": "assets",
    "database": "content/pallium.db",
    "contentTypes": [
    {
        "settings": {
            "title": "Project",
            "plural": "Projects",
            "handle": "project",
            "description": "Create Pallium project configuration files",
            "icon": "book"
        },
        "storage": {
          "format": "json",
          "extension": "json",
          "directory": "projects",
          "filename": {"type": "slug", "field": "title"},
          "title": {"type": "reflect", "field": "title"},
          "metadata": {
              "Description": {"type": "reflect", "field": "description"}
          }
        },
        "fields": [
        {
            "type": "markup",
            "value": "Use this form to create a basic project file."
        },
        {
            "name": "title",
            "label": "Title",
            "hint": "The title of your project",
            "defaultValue": "New Project",
            "validation": [
            {
                "type": "required"
            }
            ]
        },
        {
            "type": "textarea",
            "name": "description",
            "label": "Description"
        },
        {
            "name": "icon",
            "label": "Icon",
            "hint": "Use any Google Material Design icon name"
        },
        {
            "name": "contentDirectory",
            "label": "Content Directory",
            "hint": "The relative directory where your content will be saved",
            "defaultValue": "content",
            "validation": [
            {
                "type": "required"
            }
            ]
        },
        {
            "name": "assetDirectory",
            "label": "Asset Directory",
            "hint": "The relative directory where uploaded assets will be saved",
            "defaultValue": "content",
            "validation": [
            {
                "type": "required"
            }
            ]
        },
        {
            "name": "database",
            "label": "Database",
            "hint": "The relative filename for your database file",
            "defaultValue": "content/index.db",
            "validation": [
            {
                "type": "required"
            }
            ]
        },
        {
            "name": "contentTypes",
            "label": "Content Types",
            "type": "collection",
            "hint": "The different types of content to support",
            "definitions": [
            {
                "label": "Content Type",
                "fields": [
                {
                    "name": "settings",
                    "type": "object",
                    "label": "Settings",
                    "fields": [
                    {
                        "name": "title",
                        "label": "Title"
                    },
                    {
                        "name": "plural",
                        "label": "Plural",
                        "hint": "Leave this blank if you want to allow one one of this type."
                    },
                    {
                        "name": "handle",
                        "label": "Handle",
                        "hint": "Give a unique, short string to identify this type."
                    },
                    {
                        "name": "description",
                        "label": "Description",
                        "type": "textarea"
                    },
                    {
                        "name": "icon",
                        "label": "Icon",
                        "hint": "You may use any Google Material Design Icon class name here"
                    }
                    ]
                },
                {
                    "name": "storage",
                    "type": "object",
                    "label": "Storage",
                    "fields": [
                    {
                        "name": "format",
                        "label": "Format",
                        "type": "radio",
                        "defaultValue": "yaml",
                        "options": [
                            {"label": "Yaml", "value": "yaml"},
                            {"label": "Json", "value": "json"}
                        ]
                    },
                    {
                        "name": "extension",
                        "label": "Extension",
                        "hint": "The extension that will be used to save files of this content type.",
                        "defaultValue": ".md"
                    },
                    {
                        "name": "contentKey",
                        "label": "Content Key",
                        "hint": "This is the name of the field that will provide content if you'd like to store the file with front-matter."
                    },
                    {
                        "name": "directory",
                        "label": "Directory",
                        "type": "array",
                        "hint": "An array of folders where this content will be saved"
                    },
                    {
                        "name": "filename",
                        "type": "object",
                        "fields": [
                            {
                                "name": "type",
                                "label": "Reflection Method",
                                "type": "hidden",
                                "value": "slug"
                            },
                            {
                                "name": "field",
                                "label": "Filename Source Field",
                                "hint": "The name of the field to use for creating the file name"
                            }
                        ]
                    },
                    {
                        "name": "title",
                        "type": "object",
                        "fields": [
                            {
                                "name": "type",
                                "label": "Reflection Method",
                                "type": "hidden",
                                "value": "reflect"
                            },
                            {
                                "name": "field",
                                "label": "Title Source Field",
                                "hint": "The name of the field to as the display title"
                            }
                        ]
                    }
                    ]
                },
                {
                    "name": "fields",
                    "label": "Fields",
                    "type": "collection",
                    "definitions": [
                    {
                        "label": "Basic Input Field",
                        "fields": [
                        {
                            "name": "name",
                            "label": "Name"
                        },
                        {
                            "name": "type",
                            "type": "select",
                            "options": [
                                {"value": "", "label": "Select a type..."},
                                {"value": "array", "label": "Array"},
                                {"value": "color", "label": "Color"},
                                {"value": "date", "label": "Date"},
                                {"value": "email", "label": "Email"},
                                {"value": "month", "label": "Month"},
                                {"value": "md", "label": "Markdown"},
                                {"value": "number", "label": "Number"},
                                {"value": "password", "label": "Password"},
                                {"value": "text", "label": "Text"},
                                {"value": "textarea", "label": "Textarea"},
                                {"value": "time", "label": "Time"},
                                {"value": "url", "label": "URL"},
                                {"value": "week", "label": "Week"}
                            ]
                        },
                        {
                            "name": "label",
                            "label": "Label"
                        },
                        {
                            "name": "hint",
                            "label": "Hint"
                        },
                        {
                            "name": "defaultValue",
                            "label": "Default Value"
                        }
                        ]
                    },
                    {
                        "label": "Range",
                        "fields": [
                        {
                            "name": "name",
                            "label": "Name"
                        },
                        {
                            "name": "type",
                            "type": "hidden",
                            "value": "text"
                        },
                        {
                            "name": "label",
                            "label": "Label"
                        },
                        {
                            "name": "hint",
                            "label": "Hint"
                        },
                        {
                            "name": "attributes",
                            "label": "Attributes",
                            "type": "object",
                            "fields": [
                            {
                                "name": "min",
                                "label": "Minimum Value",
                                "type": "number"
                            },
                            {
                                "name": "max",
                                "label": "Maximum Value",
                                "type": "number"
                            },
                            {
                                "name": "step",
                                "label": "Step",
                                "type": "number"
                            }
                            ]
                        }
                        ]
                    }
                    ]
                }
                ]
            }
            ]
        }
        ]
    },

    {
        "settings": {
            "title": "Todo",
            "plural": "Todos",
            "handle": "todo",
            "description": "Plans in the works",
            "icon": "done all",
            "groupBy": "values.status",
            "groupDirection": "desc",
            "orderBy": ["values.priority"],
            "orderDirection": ["desc"]
        },
        "storage": {
          "format": "yaml",
          "extension": "md",
          "contentKey": "md",
          "directory": [
              "todo",
              {"type": "slug", "field": "status"}
          ],
          "filename": {"type": "slug", "field": "title"},
          "title": {"type": "reflect", "field": "title"},
          "metadata": {
              "Priority": {"type": "reflect", "field": "priority"},
              "Status": {"type": "reflect", "field": "status"}
          }
        },
        "fields": [
        {
            "name": "title",
            "label": "Title",
            "defaultValue": "To do: this thing",
            "hint": "Give this a name",
            "validation": [
            {
                "type": "required",
                "message": "A title is required"
            }
            ]
        },
        {
            "name": "status",
            "type": "radio",
            "label": "Status",
            "defaultValue": "Not Started",
            "options": [
                {"value": "Complete"},
                {"value": "In Progress"},
                {"value": "Not Started"}
            ]
        },
        {
            "name": "priority",
            "type": "radio",
            "label": "Priority",
            "defaultValue": "Medium",
            "options": [
                {"label": "High", "value": "High"},
                {"label": "Medium", "value": "Medium"},
                {"label": "Low", "value": "Low"}
            ]
        },
        {
            "name": "description",
            "type": "md",
            "label": "Description"
        }
        ]
    },

    {
        "settings": {
            "title": "Example",
            "handle": "example",
            "description": "Examples of the different types of fields",
            "icon": "extension"
        },
        "storage": {
          "format": "yaml",
          "extension": "md",
          "contentKey": "md",
          "directory": [
              "example",
              {"type": "substring", "field": "text", "start": 0, "count": 1}
          ],
          "filename": {"type": "slug", "field": "text"},
          "title": {"type": "reflect", "field": "text"},
          "metadata": {
              "Date": {"type": "moment", "field": "date", "format": "YYYY/MM/DD"},
              "Description": {"type": "reflect", "field": "textarea"}
          }
        },
        "fields": [
        {
            "type": "markup",
            "value": "# Examples\nThis is a `markup` field. You can use it to inject Markdown content into your form."
        },
        {
            "name": "text",
            "label": "text",
            "defaultValue": "Example Title",
            "hint": "Give this post a good name",
            "attributes": {
                "max": 255,
                "required": true,
                "autofocus": true
            }
        },
        {
            "name": "array",
            "label": "array",
            "type": "array",
            "hint": "This field saves multiple strings as an array"
        },
        {
            "name": "checkbox",
            "type": "checkbox",
            "label": "checkbox",
            "hint": "Saves multiple selections as an array, unless only one option is listed. With only one option, the value is saved as a string", 
            "options": [
                {"label": "Option 1", "value": "Option 1"},
                {"label": "Option 2", "value": "Option 2"},
                {"label": "Option 3", "value": "Option 3"}
            ]
        },
        {
            "name": "color",
            "type": "color",
            "label": "color",
            "hint": "Uses the built-in color picker to save a color"
        },
        {
            "name": "collection",
            "type": "collection",
            "label": "collection",
            "hint": "Save an array of objects. This field supports multiple levels of objects.",
            "definitions": [
            {
                "label": "Tagged Item",
                "fields": [
                {
                    "name": "title",
                    "type": "text",
                    "label": "Item Title"
                },
                {
                    "name": "tags",
                    "type": "collection",
                    "label": "Tags",
                    "definitions": [
                    {
                        "label": "Tag",
                        "fields": [
                        {
                            "name": "tag",
                            "label": "Tag",
                            "type": "select",
                            "options": [
                                {"value": "", "label": "---None---"},
                                {"value": "Red"},
                                {"value": "Green"},
                                {"value": "Blue"},
                                {"value": "Orange"}
                            ]
                        }
                        ]
                    }
                    ]
                }
                ]
            },
            {
                "label": "Untagged Item",
                "fields": [
                {
                    "name": "title",
                    "type": "text",
                    "label": "Item Title"
                }
                ]
            }
            ]
        },
        {
            "name": "date",
            "type": "date",
            "label": "date",
            "validation": [
            {
                "type": "required",
                "message": "Please provide a date"
            }
            ]
        },
        {
            "name": "email",
            "type": "email",
            "label": "email",
            "attributes": {
                "placeholder": "example@domain.com"
            }
        },
        {
            "name": "file",
            "type": "file",
            "label": "file",
            "hint": "This field type allows uploads of one or more files",
            "multiple": true,
            "accept": ["gif", "jpg", "png", "svg", "txt", "json"],
            "directory": [
                {"type": "substring", "field": "text", "start": 0, "count": 3}
            ]
        },
        {
            "name": "hidden",
            "type": "hidden",
            "label": "hidden",
            "value": "secret"
        },
        {
            "name": "month",
            "type": "month",
            "label": "month"
        },
        {
            "name": "md",
            "type": "md",
            "rows": 20,
            "label": "md"
        },
        {
            "name": "number",
            "type": "number",
            "label": "number"
        },
        {
            "name": "object",
            "type": "object",
            "label": "object",
            "fields": [
            {
                "name": "title",
                "label": "title"
            },
            {
                "name": "subtitle",
                "label": "subtitle"
            }
            ]
        },
        {
            "name": "password",
            "type": "password",
            "label": "password",
            "validation": [
            {
                "type": "pattern",
                "message": "Please include at least 6 characters",
                "pattern": "/^.{4,}"
            }
            ]
        },
        {
            "name": "radio",
            "type": "radio",
            "label": "radio",
            "options": [
                {"label": "Option 1", "value": "Value 1"},
                {"label": "Option 2", "value": "Value 2"}
            ]
        },
        {
            "name": "range",
            "type": "range",
            "label": "range",
            "attributes": {
                "min": 1,
                "max": 11,
                "step": 1
            }
        },
        {
            "name": "select",
            "type": "select",
            "label": "select",
            "options": [
                {"label": "Select an Option...", "value": ""},
                {"label": "Option 1", "value": "Value 1"},
                {"label": "Option 2", "value": "Value 2"}
            ]
        },
        {
            "name": "textarea",
            "type": "textarea",
            "label": "textarea",
            "rows": 5
        },
        {
            "name": "time",
            "type": "time",
            "label": "time"
        },
        {
            "name": "url",
            "type": "url",
            "label": "url"
        },
        {
            "name": "week",
            "type": "week",
            "label": "week"
        }
        ]
    }
    ]
}
