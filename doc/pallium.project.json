{
    "title": "Pallium",
    "description": "Documentation for the Pallium application",
    "icon": "code",
    "directory": "content",
    "database": "content/pallium.db",
    "contentTypes": [
    {
        "settings": {
            "title": "Todo",
            "plural": "Todos",
            "handle": "todo",
            "description": "Plans in the works",
            "icon": "done all"
        },
        "storage": {
          "format": "yaml",
          "extension": "md",
          "contentKey": "md",
          "directory": [
              "todo",
              {"type": "slug", "field": "status"}
          ],
          "filename": {"type": "slug", "field": "title"},
          "title": {"type": "reflect", "field": "title"},
          "metadata": {
              "Priority": {"type": "reflect", "field": "priority"},
              "Status": {"type": "reflect", "field": "status"}
          }
        },
        "fields": [
        {
            "name": "title",
            "label": "Title",
            "defaultValue": "To do: this thing",
            "hint": "Give this a name",
            "attributes": {
                "required": true,
                "autofocus": true
            }
        },
        {
            "name": "status",
            "type": "radio",
            "label": "Status",
            "defaultValue": "not started",
            "options": [
                {"label": "Complete", "value": "Complete"},
                {"label": "In Progress", "value": "In Progress"},
                {"label": "Not Started", "value": "Not Started"}
            ]
        },
        {
            "name": "priority",
            "type": "radio",
            "label": "Priority",
            "defaultValue": "Medium",
            "options": [
                {"label": "High", "value": "High"},
                {"label": "Medium", "value": "Medium"},
                {"label": "Low", "value": "Low"}
            ]
        },
        {
            "name": "description",
            "type": "md",
            "label": "Description"
        }
        ]
    }
    ]
}
