{
    "title": "Pallium Project Builder",
    "description": "A tool for building your own Pallium project files",
    "icon": "code",
    "contentDirectory": "projects",
    "assetDirectory": ["projects", "assets"],
    "database": ["projects", "projects.db"],
    "references": {
        "calculations": [
        {
            "label": "Static name"
        },
        {
            "label": "Reflected Field",
            "type": "object",
            "hint": "Use the value from another field.",
            "fields": [
            {
                "name": "type",
                "type": "select",
                "label": "Transformation",
                "options": [
                    {"value": "reflect", "label": "None"},
                    {"value": "slug", "label": "Slug"},
                    {"value": "kebab", "label": "Kebab"},
                    {"value": "camel", "label": "Camel Case"},
                    {"value": "snake", "label": "Snake Case"}
                ]
            },
            {
                "name": "field",
                "label": "Filename Source Field",
                "hint": "The name of the field to use for creating the file name"
            }
            ]
        },
        {
            "label": "Substring",
            "type": "object",
            "hint": "Use part of a value from another field.",
            "fields": [
            {
                "name": "type",
                "type": "hidden",
                "value": "substring"
            },
            {
                "name": "field",
                "label": "Filename Source Field",
                "hint": "The name of the field to use for creating the file name"
            },
            {
                "name": "start",
                "type": "number",
                "label": "Starting Index",
                "defaultValue": 0
            },
            {
                "name": "count",
                "type": "number",
                "label": "Number of characters",
                "defaultValue": 1
            }
            ]
        },
        {
            "label": "Formatted Date",
            "type": "object",
            "hint": "Use a date to format the value.",
            "fields": [
            {
                "name": "type",
                "type": "hidden",
                "value": "moment"
            },
            {
                "name": "field",
                "label": "Filename Source Field",
                "hint": "The name of the field to use for creating the file name. Leave blank to use the current date."
            },
            {
                "name": "format",
                "label": "Format",
                "hint": "This calculation uses Moment.js to format the value.",
                "defaultValue": "Y-MM-DD"
            }
            ]
        }
        ]
    },

    "contentTypes": [
    {
        "settings": {
            "title": "Project",
            "plural": "Projects",
            "handle": "project",
            "description": "Create Pallium project configuration files",
            "icon": "book"
        },
        "storage": {
          "format": "json",
          "extension": "json",
          "directory": "projects",
          "filename": {"type": "slug", "field": "title"},
          "title": {"type": "reflect", "field": "title"},
          "metadata": {
              "Description": {"type": "reflect", "field": "description"}
          }
        },
        "fields": [
        {
            "type": "markup",
            "value": "Use this form to create a basic project file."
        },
        {
            "name": "title",
            "label": "Title",
            "hint": "The title of your project",
            "defaultValue": "New Project",
            "searchable": true,
            "validation": [
            {
                "type": "required"
            }
            ]
        },
        {
            "type": "textarea",
            "name": "description",
            "searchable": true,
            "label": "Description"
        },
        {
            "name": "icon",
            "label": "Icon",
            "hint": "Use any Google Material Design icon name"
        },
        {
            "name": "contentDirectory",
            "label": "Content Directory",
            "type": "array",
            "hint": "The relative directory where your content will be saved",
            "defaultValue": "content",
            "validation": [
            {
                "type": "required"
            }
            ]
        },
        {
            "name": "assetDirectory",
            "label": "Asset Directory",
            "type": "array",
            "hint": "The relative directory where uploaded assets will be saved",
            "defaultValue": "content",
            "validation": [
            {
                "type": "required"
            }
            ]
        },
        {
            "name": "database",
            "label": "Database",
            "hint": "The relative filename for your database file",
            "defaultValue": "content/index.db",
            "validation": [
            {
                "type": "required"
            }
            ]
        },
